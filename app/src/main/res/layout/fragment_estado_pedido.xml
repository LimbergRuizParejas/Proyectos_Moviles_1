<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Estado del pedido -->
    <TextView
        android:id="@+id/estadoPedidoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado del Pedido" />

    <Button
        android:id="@+id/marcarEnCaminoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marcar como en Camino" />

    <Button
        android:id="@+id/marcarEntregadoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marcar como Entregado" />
</LinearLayout>
